{
    "name": "drewlabs/core-helpers",
    "description": "Set of global function for handling utility task ranging from array, string and datetimes manipulations",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2|^7.3|^7.4|^8.0|^8.1",
        "psr/http-message": "^1.0",
        "drewlabs/contracts": "^2.0",
        "tuupola/base62": "^2.1",
        "ramsey/uuid": "^4.1",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "nyholm/psr7-server": "^1.0",
        "nyholm/psr7": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Drewlabs\\Core\\Helpers\\": "src/"
        },
        "files": [
            "global/array.php",
            "global/datetime.php",
            "global/strings.php",
            "global/utils.php",
            "global/random.php",
            "global/compose.php",
            "global/immutable.php",
            "global/format.php",
            "global/url.php",
            "global/hashing.php",
            "global/callables.php",
            "global/reflector.php",
            "global/iterators.php"
        ],
        "optimize-autoloader": true
    },
    "autoload-dev": {
        "psr-4": {
            "Drewlabs\\Core\\Helpers\\Tests\\": "tests/"
        }
    },
    "repositories":[
        {
            "type": "vcs",
            "url": "git@github.com:liksoft/drewlabs-php-contracts.git"
        }
    ]
}
